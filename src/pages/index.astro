---
import FormattedDate from '../components/FormattedDate.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import SiteLayout from '../layouts/SiteLayout.astro';
import { SITE_DESCRIPTION } from '../consts';
import { getSortedAndFilteredPosts, resolvePostLink } from '../utils/blog';

const posts = await getSortedAndFilteredPosts();

const featuredSlugs = new Set([
  '/blog/fractals-of-the-divine',
  '/blog/reflections-in-a-mirror-2025-03-15',
]);

const featuredPosts = posts.filter((post) => featuredSlugs.has(resolvePostLink(post)));
---

<SiteLayout title="Home | Pondering Silver" description={SITE_DESCRIPTION}>
  <header class="space-y-6 text-center">
    <span class="inline-flex items-center justify-center rounded-full bg-purple-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-purple-700">
      Welcome inward
    </span>
    <h1 class="text-3xl font-bold text-gray-900 sm:text-5xl">Pondering Silver</h1>
    <p class="mx-auto max-w-3xl text-base text-gray-600 sm:text-lg">
      Essays, transmissions, and soul tools for seekers moving between depth work and luminous play. Explore featured
      reflections below, or search the full archive to find the resonance you came for.
    </p>
    <div class="flex flex-wrap justify-center gap-3 text-sm text-purple-700">
      <a href="/services" class="inline-flex items-center gap-2 rounded-full border border-purple-200 bg-white px-3 py-1 font-medium transition hover:border-purple-400 hover:text-purple-800">
        <span>Offerings</span>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6"></path>
        </svg>
      </a>
      <a href="/tools" class="inline-flex items-center gap-2 rounded-full border border-purple-200 bg-white px-3 py-1 font-medium transition hover:border-purple-400 hover:text-purple-800">
        <span>Tools</span>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6"></path>
        </svg>
      </a>
      <a href="/blog" class="inline-flex items-center gap-2 rounded-full border border-purple-200 bg-white px-3 py-1 font-medium transition hover:border-purple-400 hover:text-purple-800">
        <span>All writings</span>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6"></path>
        </svg>
      </a>
    </div>
  </header>

  {featuredPosts.length > 0 && (
    <section class="mt-14 space-y-6">
      <div class="flex flex-col items-center gap-2 text-center">
        <h2 class="text-2xl font-semibold text-gray-900">Featured reflections</h2>
        <p class="max-w-2xl text-sm text-gray-600">
          Curated pieces that sit at the heart of Pondering Silver—start here if you&apos;re new, or revisit for fresh insight.
        </p>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        {featuredPosts.map((post) => {
          const link = resolvePostLink(post);
          const keywords = post.data.keywords ?? [];
          const previewKeywords = keywords.slice(0, 3);
          const extraKeywords = Math.max(0, keywords.length - previewKeywords.length);
          return (
            <a
              href={link}
              class="group flex h-full flex-col rounded-2xl border border-purple-100 bg-white p-6 shadow-sm transition hover:border-purple-200 hover:shadow-md"
            >
              <h3 class="text-lg font-semibold text-gray-900 transition-colors duration-200 group-hover:text-purple-700">
                {post.data.title}
              </h3>
              <p class="mt-3 flex-1 text-sm text-gray-600">{post.data.description}</p>
              <div class="mt-5 space-y-3 text-sm text-gray-500">
                <div class="flex flex-wrap gap-2">
                  {previewKeywords.map((keyword) => (
                    <span class="rounded-full bg-purple-50 px-2.5 py-1 text-xs font-medium text-purple-700" aria-hidden="true">
                      {keyword}
                    </span>
                  ))}
                  {extraKeywords > 0 && <span class="text-xs text-gray-400">+{extraKeywords} more</span>}
                </div>
                <div class="flex items-center justify-between text-xs">
                  <span>
                    <FormattedDate date={post.data.date} />
                  </span>
                  <span class="inline-flex items-center gap-1 text-purple-600 transition group-hover:text-purple-800">
                    Read more
                    <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 18l6-6-6-6"></path>
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </section>
  )}

  <section class="mt-16 space-y-6" data-search-container>
    <div class="flex flex-col items-center gap-4 text-center">
      <h2 class="text-2xl font-semibold text-gray-900">Search the archive</h2>
      <p class="max-w-2xl text-sm text-gray-600">
        Look for a theme, keyword, or moment you remember—everything is indexed for quick recall.
      </p>
      <label class="relative flex w-full max-w-xl">
        <span class="sr-only">Search blog posts</span>
        <input
          type="search"
          placeholder="Search by title, description, or keyword..."
          class="w-full rounded-2xl border border-gray-300 bg-white py-3 pl-4 pr-11 text-sm text-gray-700 shadow-sm transition focus:border-purple-400 focus:outline-none focus:ring focus:ring-purple-100"
          data-search-input
        />
        <svg class="pointer-events-none absolute right-4 top-1/2 h-5 w-5 -translate-y-1/2 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="7" />
          <line x1="21" y1="21" x2="16.65" y2="16.65" />
        </svg>
      </label>
    </div>

    <div class="grid gap-6 md:grid-cols-2" data-search-results>
      {posts.map((post) => <BlogPostCard post={post} />)}
    </div>
    <p class="text-center text-sm text-gray-500" data-empty-state hidden>
      Nothing matches that search yet. Try a different word or browse the full archive.
    </p>

    <div class="text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 rounded-full border border-purple-300 bg-purple-50 px-4 py-2 text-sm font-semibold text-purple-700 transition hover:border-purple-400 hover:bg-purple-100"
      >
        Browse every post
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6"></path>
        </svg>
      </a>
    </div>
  </section>

  <script>
    import '../scripts/search.js';
  </script>
</SiteLayout>
